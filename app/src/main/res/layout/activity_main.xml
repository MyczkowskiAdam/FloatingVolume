<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.basel.DualButton.DualButton
        android:id="@+id/dualBtn"
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:backgroundColorFirst="#4285F4"
        app:backgroundColorSecond="#455C65"
        app:drawableLeftFirst="@drawable/ic_done_white_24dp"
        app:drawableLeftSecond="@drawable/ic_close_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textColorFirst="#ffffff"
        app:textColorSecond="#ffffff"
        app:textFirst="@string/start_service"
        app:textSecond="@string/stop_service" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dualBtn" />
</android.support.constraint.ConstraintLayout>