<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/theme_settings_category">
        <ListPreference
            android:defaultValue="@string/dialog_default_theme"
            android:dialogTitle="@string/dialog_theme_dtext"
            android:entries="@array/dialog_theme_entries"
            android:entryValues="@array/dialog_theme_values"
            android:icon="@drawable/ic_color_lens_24dp"
            android:key="pref_themes_value"
            android:summary="%s"
            android:title="@string/pref_themes" />

        <Preference
            android:icon="@drawable/ic_format_color_fill_24dp"
            android:key="custom_theme_pref"
            android:summary="@string/pref_custom_theme_summary"
            android:title="@string/pref_custom_theme" />

        <ListPreference
            android:defaultValue="@string/dialog_default_style"
            android:dialogTitle="@string/dialog_style_dtext"
            android:entries="@array/dialog_style_entries"
            android:entryValues="@array/dialog_style_values"
            android:icon="@drawable/ic_slim_dialog_24dp"
            android:key="pref_dialog_style"
            android:summary="%s"
            android:title="@string/dialog_style_title" />

        <ListPreference
            android:defaultValue="@string/pref_head_default_value"
            android:dialogTitle="@string/pref_head_opacity_dtext"
            android:entries="@array/head_opacity_entries"
            android:entryValues="@array/head_opacity_values"
            android:icon="@drawable/ic_opacity_24dp"
            android:key="pref_head_opacity"
            android:summary="%s"
            android:title="@string/pref_head_opacity_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/floating_dialog_settings_category">
        <SwitchPreference
            android:icon="@drawable/ic_power_button_24dp"
            android:key="pref_settings_start_on_boot"
            android:summary="@string/pref_start_on_boot_summary"
            android:title="@string/pref_start_on_boot_title" />
        <SwitchPreference
            android:icon="@drawable/ic_save_24dp"
            android:key="settings_save_last_position"
            android:summary="@string/settings_summary_save_position"
            android:title="@string/settings_title_save_position" />
        <SwitchPreference
            android:icon="@drawable/ic_touch_app_24dp"
            android:key="disable_fixed_ui"
            android:summary="@string/pref_disable_fixed_ui_summary"
            android:title="@string/pref_disable_fixed_ui" />
        <SwitchPreference
            android:icon="@drawable/ic_bounce_24dp"
            android:key="enable_bounce_effect"
            android:summary="@string/pref_enable_bounce_effect_summary"
            android:title="@string/pref_enable_bounce_effect" />
        <SwitchPreference
            android:icon="@drawable/ic_call_24dp"
            android:key="permanent_voice_call_bar"
            android:summary="@string/pref_permanent_voice_call_bar_summary"
            android:title="@string/pref_permanent_voice_call_bar_title" />
        <MultiSelectListPreference
            android:defaultValue="@array/show_bars_multipreference_values_default"
            android:entries="@array/show_bars_multipreference_entries"
            android:entryValues="@array/show_bars_multipreference_values"
            android:icon="@drawable/ic_star_half_24dp"
            android:key="items_to_show_in_dialog_pref"
            android:summary="@string/items_to_show_in_dialog_summary"
            android:title="@string/items_to_show_in_dialog" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about_category">
        <Preference
            android:icon="@drawable/ic_open_source_24dp"
            android:key="pref_opensource"
            android:summary="@string/pref_opensources_libs_summary"
            android:title="@string/pref_opensource_libs" />
        <Preference
            android:icon="@drawable/ic_info_24dp"
            android:key="pref_about_me"
            android:summary="@string/about_me_summary"
            android:title="@string/about_me" />
    </PreferenceCategory>
</PreferenceScreen>
