<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryP</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkP</item>
        <item name="colorAccent">@color/colorAccentP</item>
        <item name="theme_icon_color">@drawable/ic_color_lens_black_24dp</item>
        <item name="save_icon_color">@drawable/ic_save_black_24dp</item>
        <item name="fixed_ui_icon_color">@drawable/ic_touch_app_black_24dp</item>
        <item name="bounce_icon_color">@drawable/ic_bounce_black_24dp</item>
        <item name="slim_dialog_icon_color">@drawable/ic_slim_dialog_black_24dp</item>
        <item name="enable_bars_icon_color">@drawable/ic_star_half_black_24dp</item>
        <item name="about_icon_color">@drawable/ic_info_black_24dp</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorPixelBlue</item>
        <item name="android:windowBackground">@color/colorPrimaryDarkInverse</item>
        <item name="theme_icon_color">@drawable/ic_color_lens_white_24dp</item>
        <item name="save_icon_color">@drawable/ic_save_white_24dp</item>
        <item name="fixed_ui_icon_color">@drawable/ic_touch_app_white_24dp</item>
        <item name="bounce_icon_color">@drawable/ic_bounce_white_24dp</item>
        <item name="slim_dialog_icon_color">@drawable/ic_slim_dialog_white_24dp</item>
        <item name="enable_bars_icon_color">@drawable/ic_star_half_white_24dp</item>
        <item name="about_icon_color">@drawable/ic_info_white_24dp</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme">
        <item name="txt_color">@android:color/black</item>
        <item name="card_color">@android:color/white</item>
        <item name="media_icon_color">@drawable/ic_volume_up_black_24dp</item>
        <item name="ringer_icon_color">@drawable/ic_ring_volume_black_24dp</item>
        <item name="alarm_icon_color">@drawable/ic_alarm_black_24dp</item>
        <item name="close_icon_color">@drawable/ic_close_black_24dp</item>
        <item name="voicecall_icon_color">@drawable/ic_call_black_24dp</item>
        <item name="ringer_normal">@drawable/ic_volume_up_black_24dp</item>
        <item name="ringer_vibrate">@drawable/ic_vibration_black_24dp</item>
        <item name="ringer_silent">@drawable/ic_do_not_disturb_on_black_24dp</item>
    </style>


    <style name="AppTheme.Dark.Dialog" parent="AppTheme.Dark">
        <item name="txt_color">@android:color/white</item>
        <item name="card_color">@android:color/black</item>
        <item name="media_icon_color">@drawable/ic_volume_up_white_24dp</item>
        <item name="ringer_icon_color">@drawable/ic_ring_volume_white_24dp</item>
        <item name="alarm_icon_color">@drawable/ic_alarm_white_24dp</item>
        <item name="close_icon_color">@drawable/ic_close_white_24dp</item>
        <item name="voicecall_icon_color">@drawable/ic_call_white_24dp</item>
        <item name="ringer_normal">@drawable/ic_volume_up_white_24dp</item>
        <item name="ringer_vibrate">@drawable/ic_vibration_white_24dp</item>
        <item name="ringer_silent">@drawable/ic_do_not_disturb_on_white_24dp</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>
